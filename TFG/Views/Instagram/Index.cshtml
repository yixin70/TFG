@model InstagramIndexVM


<body>

    <div> @Model.Test </div>
    <td><a class="nav-link text-dark" asp-controller="Instagram" asp-action="Refresh">Refresh</a></td>

    <table>
        <thead>
            <tr>
                <th width="40%">Id</th>
                <th width="20%">Date</th>
                <th width="20%">Uri </th>
                <th width="20%">Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Id</td>
                    <td>@log.Date</td>
                    @if (log.InstagramMedia != null)
                    {
                        <td><a href="@log.InstagramMedia.Uri">Link Text</a></td>
                        <td><a class="nav-link text-dark" asp-controller="Instagram" asp-action="Download" asp-route-id="@log.InstagramMedia.Id">Download</a></td>
                    }
                    @if(log.InstagramStory != null){
                        <td><a href="@log.InstagramStory.Uri">Link Text</a></td>
                        <td><a class="nav-link text-dark" asp-controller="Instagram" asp-action="Download" asp-route-id="@log.InstagramStory.Id">Download</a></td>
                    }

                </tr>
            }
        </tbody>
    </table>

</body>